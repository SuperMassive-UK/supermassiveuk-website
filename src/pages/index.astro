---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Logo from "../assets/images/logo.svg";
import DepotLogo from "../assets/images/depot_mayfield_logo.svg";
import CableGame from "../assets/images/kid-cable-game.jpg";
import SandpitBackground from "../assets/images/sandpit-background.jpg";
import SandpitBackground2 from "../assets/images/sandpit-background-2.png";
import PortalBackground from "../assets/images/portal-background.jpg";
import PortalPerson from "../assets/images/portal-person.jpg";
import PipesPerson from "../assets/images/person-pipes.jpg";
import Stars from "../assets/images/stars.png";
import BroadwickLogo from "../assets/images/broadwick-logo.png";
import MitihLogo from "../assets/images/mitih-logo.png";
import MustartMediaLogo from "../assets/images/mustard-media-logo.png";
import TgcLogo from "../assets/images/tgc-logo.png";
import UkriLogo from "../assets/images/ukri-logo.png";
import { Image } from "astro:assets";
import FAQ from "@/components/sections/FAQ.astro";
---

<BaseLayout
  title={"SuperMassive"}
  description={"Manchester's Digital Playground."}
>
  <section class="relative h-[200vh] min-h-[60rem] sm:min-h-[120rem]">
    <div
      class="sticky top-0 h-[100vh] min-h-[30rem] sm:min-h-[60rem] w-full z-0"
    >
      <video autoplay muted loop playsinline class="w-full h-full object-cover">
        <source src="supermassive_homepage_video.webm" type="video/webm" />
        <source src="supermassive_homepage_video.mp4" type="video/mp4" />
      </video>
    </div>

    <div
      class="absolute top-0 left-0 w-full h-[200vh] min-h-[60rem] sm:min-h-[120rem] font-[Obviously] overflow-hidden"
    >
  
      <div
        class="w-full h-[100vh] min-h-[30rem] sm:min-h-[60rem] px-8 text-2xl py-24 overflow-hidden flex flex-col justify-between"
      >
      <p
      class="w-full text-2xl sm:text-5xl text-center font-bold text-3xl sm:text-5xl xl:text-7xl md:mt-8 mb-24 uppercase italic"
    >
      Coming Summer 2025
    </p>
      <div class="flex flex-col justify-center xl:flex-row xl:justify-center gap-2 xl:gap-24 items-center ">
     
        <Logo class="h-32 sm:h-auto max-w-full"   />
        <p class="uppercase font-bold italic text-2xl sm:text-5xl md:my-8">At</p>
        <DepotLogo class="h-20 sm:h-auto max-w-full" />
      
      </div>
     
    </div>

      <div
        class="w-full h-[100vh] min-h-[30rem] sm:min-h-[60rem] px-8 text-2xl lg:py-24 overflow-hidden flex flex-col justify-center"
      >
      <div class="flex flex-col justify-start items-center lg:mb-24 text-[10vw] lg:text-9xl">
        <p class="uppercase font-bold italic leading-[1.125] ">Bigger!</p>
        <p class="uppercase font-bold italic leading-[1.125] ">Better!</p>
        <p class="uppercase font-bold italic leading-[1.125]  max-w-[10ch] text-center">More interactive!</p>
      </div>
    </div>
  </section>
  <section
    class="max-w-6xl mx-auto mt-56 mb-0 md:mt-96 px-6  flex flex-col justify-center items-center"
  >
    <div
      class="bg-sm-md-purple grid p-4 xs:p-8 rounded-xl grid-cols-1 lg:grid-cols-2 relative z-10"
    >
      <p
        class="absolute left-[-10%] top-[-15%] md:left-[-5%] lg:left-[-3%] lg:top-[-25%] xl:left-[-5%] font-heading italic max-w-[10ch] text-4xl xs:text-5xl sm:text-6xl font-bold z-10 rotate-[-15deg] z-20 uppercase text-center"
      >
        Sign ups <span class="text-6xl xs:text-7xl sm:text-8xl lg:text-9xl">open!</span>
      </p>
      <Image
        src={PortalPerson}
        alt="person standing in front of portal of reflection"
        class="slanted right rounded--t-xl lg:rounded-none lg:rounded-l-xl h-full object-cover"
      />
      <div
        class="slanted left rounded-b-xl lg:rounded-none lg:rounded-r-xl bg-sm-dark-purple p-4 pt-12 lg:p-12 lg:pl-24 text-xl sm:text-2xl lg:text-4xl mt-[-1.5rem] lg:mt-0"
      >
        <p class="leading-[1.125]">
          <span class="font-heading italic bold uppercase">Sign up now</span> and
          be the first to hear about tickets, get entered into our prize competition
          and receive a <span class="font-heading italic bold uppercase"
            >20%</span
          >
          <span>discount</span> 
          <button
          class="relative block   mx-auto font-heading font-bold italic uppercase rounded-full border border-white border-4 py-4 px-8  text-3xl lg:text-4xl mt-4 lg:mt-8 cursor-pointer vrlps-trigger col-span-full"
          onclick={`ViralLoops.getCampaign().then((campaign) => {
          if (campaign) {
            campaign.customButtonTrigger();
          }
    });`}>Sign me up</button
        >
        </p>
      </div>
     
    </div>
   
    <form-widget
      component="customButton"
      ucid="e9xz4agONxBxkGnd7pUojPlnY4Y"
      mode="popup"></form-widget>
  </section>
  <section class="mx-auto mt-32 mb-56 relative h-[100vh] min-h-[60rem]">
    <div class="sandpit-bg w-full bg-cover py-36 h-full flex flex-col justify-center">
      <p
        class="font-heading font-bold uppercase text-4xl xs:text-5xl lg:text-9xl text-center max-w-9xl mx-auto px-4"
      >
        “THE BEST THING I DID IN MANCHESTER ALL YEAR”
      </p>
      <p class="mx-auto text-2xl xs:text-4xl text-center mt-24">
        - Zack Hipps -
      </p>
    </div>
  </section>
  <section class="relative max-w-7xl mx-auto my-32 md:mt-96  px-6 ">
   
    <div
      class="bg-sm-blue grid p-4 xs:p-8 rounded-xl grid-cols-1 lg:grid-cols-2 relative overflow-visible "
    >
   
      <Image
        src={CableGame}
        alt="child playing with rgb cables"
        class="slanted right rounded-t-xl lg:rounded-none lg:rounded-l-xl h-full object-cover"
      />
      <div
        class="slanted left rounded-b-xl lg:rounded-none lg:rounded-r-xl bg-sm-dark-purple p-4 pt-12 lg:p-12 lg:pl-24 text-xl sm:text-2xl lg:text-4xl mt-[-1.5rem] lg:mt-0"
      >
        <p class="mb-4 lg:mb-8 leading-[1.125]">
          SuperMassive isn't a place or product – it's a living system waiting
          for you to activate it.
        </p>
        <p class="leading-[1.125]">
          Enter and feel the system stir. The world reacts not to a passive
          observer, but to a necessary variable
        </p>
      </div>
      <h2
      class="absolute left-[-20%]  top-[-20%] xs:left-[-15%] xs:top-[-25%] lg:top-[-40%] rotate-[-15deg] uppercase font-bold italic text-3xl xs:text-5xl sm:text-6xl  text-center mb-16"
    >
      Calling all <p class="text-5xl xs:text-7xl sm:text-8xl lg:text-9xl italic max-w-[10ch] z-100">curious minds</p>
    </h2>
      <p
        class="absolute bottom-[-5%] right-2 sm:bottom-[-7%] lg:bottom-[-8%]  xl:right-[-3%] font-heading italic text-5xl xs:text-7xl sm:text-8xl lg:text-9xl font-bold z-10 rotate-[-15deg] z-20 uppercase"
      >
        you!
      </p>
    </div>
  </section>
  
  
  <section
    class="relative mx-auto pb-36 sandpit-bg-2 bg-no-repeat bg-bottom bg-cover"
  >
    <div class="w-full bg-sm-dark-purple py-8 px-4 md:px-24 lg:px-48">
      <ul class="max-w-8xl mx-auto flex flex-wrap gap-8 justify-around">
        {
          () => {
            return [
              {
                review:
                  "Fabulous sensory experience! There is a big gap in the market for this kind of activity. My 2 children loved it, we hope to go again!",
                author: "Christine C",
              },
              {
                review:
                  "Such an exciting and interactive happening of sound and light and much more, for very young and very old and everyone in between.",
                author: "Karin S",
              },
              {
                review:
                  "This was an amazing experience. I haven’t enjoyed an exhibition this much in years. Great for all ages. Loved how interactive it was.",
                author: "Libby M",
              },
              {
                review:
                  "We were lucky to grab tickets to this sell out event before they were gone and I’m so glad we did! Full of amazing visuals and fun sensory experiences!",
                author: "Exploreandplaynorthwest",
              },
              {
                review:
                  "The coolest experience ive been to in a long time. This super tactile exhibition is honestly the best thing I did last year and they use AI in an actually cool way.",
                author: "Zack",
              },
            ].map((review) => (
              <li class="bg-sm-md-purple w-[18rem] p-6 rounded-xl flex flex-col justify-center gap-4 h-[18rem]">
                “{review.review}”{" "}
                <>
                  <p class="text-slate-300">- {review.author}</p>
                  <Image src={Stars} alt="5 star review" />
                </>
              </li>
            ));
          }
        }
      </ul>
    </div>
    <h2
      class="font-heading font-bold italic uppercase text-4xl sm:text-6xl mx-auto text-center my-24"
    >
      Supported by
    </h2>
    <ul class="flex flex-wrap gap-8 max-w-6xl mx-auto justify-around px-8">
      <li>
        <Image src={UkriLogo} alt="UKRI logo" />
      </li>
      <li>
        <Image src={BroadwickLogo} alt="Broadwick logo" />
      </li>
      <li>
        <Image src={MitihLogo} alt="MITIH logo" />
      </li>
      <li>
        <Image src={TgcLogo} alt="The Growth Company logo" />
      </li>
      <li>
        <Image src={MustartMediaLogo} alt="Mustard Media logo" />
      </li>
    </ul>
  </section>
  <section class="relative py-12 mt-24">
    <div
      class="max-w-7xl mx-auto mb-0 px-6 flex flex-col gap-12 justify-center items-center"
    >
      
      <div
        class="bg-sm-blue grid p-4 xs:p-8 rounded-xl grid-cols-1 lg:grid-cols-2 relative z-10 gap-8 w-full"
      >
     <div class="rounded-xl object-cover hidden lg:block  pipes-bg bg-cover">
<!--         
        <Image
          src={PipesPerson}
          alt="child playing with rgb cables"
          class="rounded-xl object-cover hidden lg:block lg:col-span-1"
        /> -->
      </div>
        <div
          class="rounded-xl bg-sm-md-purple p-4 pt-12 col-span-1"
        >
        <h3
        class="mb-4 uppercase font-heading font-bold italic text-3xl lg:text-4xl"
      >
        2025 dates
      </h3>
      <p class="text-lg sm:text-xl font-bold">13 June - 13 September</p>
          <h3
            class="mb-4 mt-8 uppercase font-heading font-bold italic text-3xl lg:text-4xl"
          >
            Tickets
          </h3>
          <p class="text-lg sm:text-xl">
            Signups will get first access to tickets and exclusive discount.
          </p>
          <ul class="text-3xl font-bold flex flex-col gap-3 my-8  ">
            <li>Adult: £17.50</li>
            <li>Child (3–15): £12.50</li>
            <li>Concession: £14.00</li>
          </ul>
          <p class="text-lg sm:text-xl mt-4">Tickets for signups release 28 April 2025</p>
          <p class="text-lg sm:text-xl">General release on 1 May 2025</p>
          <button
            class="mx-auto font-heading font-bold italic uppercase rounded-full border border-white border-4 py-4 px-8 text-3xl lg:text-4xl mt-12 cursor-pointer vrlps-trigger block w-72"
            onclick={`ViralLoops.getCampaign().then((campaign) => {
  campaign.customButtonTrigger();
});`}>Sign up</button
          >
        </div>
        <div
          class="bg-sm-dark-purple col-span-1 lg:col-span-2 row-span-1 p-4 slanted bottom rounded-t-xl"
        >
          <div class="flex-col lg:flex-row flex justify-between"> 
            <div class="flex flex-col items-start">
              <h3
                class="mb-8 uppercase font-heading font-bold italic text-3xl lg:text-4xl lg:h-[4.5rem]"
              >
                Location
              </h3>
              <p class="max-w-[50ch] mb-auto text-lg sm:text-xl">
                SuperMassive is located on the rooftop of Depot Mayfield, a two
                minute walk from Piccadilly station.
              </p>
            </div>
            <div class="flex flex-col items-start lg:items-end mt-8 lg:mt-0">
              <p
                class="mb-8 uppercase font-heading font-bold italic text-3xl lg:text-4xl lg:text-right lg:h-[4.5rem]"
              >
                Depot Mayfield Platform A
              </p>
              <p class="lg:text-right max-w-[10ch] text-lg sm:text-xl">
                11 Baring St Manchester M1 2PY
              </p>
            </div>
          </div>
        </div>
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m17!1m12!1m3!1d593.643679458841!2d-2.2281507854219433!3d53.47606026837108!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zNTPCsDI4JzMzLjYiTiAywrAxMyc0MC40Ilc!5e0!3m2!1sen!2suk!4v1744149200516!5m2!1sen!2suk"
          width="600"
          height="450"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          class="relative w-full slanted top lg:col-span-2 rounded-b-xl mt-[-1rem]"
        ></iframe>
        <h2
        class=" absolute rotate-[-15deg] top-[-2.5%] sm:top-[-4%]  left-[-3%] lg:left-[-1%] md:top-[-7%] xl:left-[-5%] font-heading font-bold italic text-5xl xs:text-7xl sm:text-8xl lg:text-9xl text-center uppercase"
      >
       Info
      </h2>
      </div>
    </div>
  </section>
  <section class="max-w-7xl mx-auto my-24 relative">
    <h2
      class="text-5xl md:text-7xl lg:text-8xl text-center font-heading font-bold max-w-6xl mx-auto"
    >
      Frequently Asked Questions
    </h2>
    <div class="mt-16">
      <FAQ />
    </div>
  </section>
</BaseLayout>
<style
  define:vars={{
    sandpitBackground: `url(${SandpitBackground.src})`,
    sandpitBackground2: `url(${SandpitBackground2.src})`,
    portalBackground: `url(${PortalBackground.src})`,
    pipesBackground: `url(${PipesPerson.src})`,

  }}
>
  .sandpit-bg {
    background-image:
      linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)),
      var(--sandpitBackground);
  }

  .sandpit-bg-2 {
    background-image:
      linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)),
      var(--sandpitBackground2);
  }

  .portal-bg {
    background-image:
      linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)),
      var(--portalBackground);
  }

  .pipes-bg {
    background-image:
      var(--pipesBackground);
  }
</style>
