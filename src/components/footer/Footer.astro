---
import { getEntry } from "astro:content";
import { Icon } from "astro-icon/components";

const { data: footerData } = await getEntry("data", "footer") as {data: any};
---

<div class="mt-auto" >
  <footer
    class="relative z-50 py-6 px-6 md:px-10 max-w-6xl mx-auto flex justify-center mb-16"
  >
   
    <div class="flex flex-col items-center gap-2">
      <p class="text-white uppercase text-sm md:text-md">
        Connect with us
      </p>
      <div class="flex gap-2 items-center">
        {
          footerData.social_links.map((social_link: any) => (
            <a
              class="cursor-pointer"
              href={social_link.url}
              aria-label={social_link.label}
            >
              <Icon name={social_link.icon} class="text-xl md:text-3xl" />
            </a>
          ))
        }
      </div>
      <p
        class="text-white uppercase font-heading text-[0.5rem] md:text-xs text-center"
      >
        2025 yesThing LTD. All Rights Reserved
      </p>
    </div>
  </footer>
</div>
