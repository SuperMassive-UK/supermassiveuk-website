---
const { rowClass, containerClass, isScrollSection = true } = Astro.props;
---

<section
  class:list={["min-h-[800px] max-w-screen ", rowClass]}
  data-scroll-section={isScrollSection}
>
  <div
    class:list={[
      "relative flex flex-col justify-center items-start h-screen min-h-[800px] px-6 md:px-10 mx-auto",
      containerClass,
    ]}
  >
    <slot />
  </div>
</section>
